# Database (optional, default shown)
DATABASE_URL=sqlite:///data/school_bot.db

# Redis (optional, default shown)
REDIS_URL=redis://redis:6379/0

# FastAPI Server Settings (optional, defaults shown)
API_HOST=0.0.0.0        # The host interface to bind to
API_PORT=8000           # The port to run the FastAPI server on
API_WORKERS=1           # Number of worker processes for the API server

# AI related settings (optional, defaults shown)
OPENAI_API_KEY=sk-proj-...
LANGCHAIN_TRACING_V2=true
